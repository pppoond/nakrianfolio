        <div style="height: 55px;"></div>
        <%- include('../includes/header.ejs') %>
            <div class="container bg-footer pt-2">
                <div class="row">
                    <div class="col-12 col-xl-8">
                        <div>
                            <h3 class="kanit text-light">
                                <%= data.p_title + " " + data.p_name %>
                            </h3>
                        </div>
                        <div class="" id="portfolio_body">
                            <div class="d-flex flex-column" id="loadingId">
                                <% data.p_detail.forEach(element=> { %>
                                    <div class="col-12 rounded mb-3 p-2 bg-footer shadow">
                                        <div class="row">
                                            <div class="col-12 col-xl-6">
                                                <img class="rounded" src="<%= element.image_address %>" width="100%">
                                            </div>
                                            <div class="col-12 col-xl-6">
                                                <div class="d-flex align-items-center pt-2">
                                                    <img class="rounded-circle" src="/images/logo.png" width="50px">
                                                    <div class="p-2">
